<!DOCTYPE html>
<html lang="en">

<%- include("header") %>

  <body>
    <div class="box" id="heading">
      <h1>
        <%= title %>
      </h1>
    </div>

    <div class="box">
      <% todos.forEach(todo=> { %>
        <div class="item">
          <input type="checkbox">
          <p>
            <%= todo.name %>
          </p>
        </div>
        <% }) %>

          <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="add new item" autocomplete="off" />
            <button type="submit" name="button" value="<%=title%>">+</button>
          </form>
    </div>

  </body>

  <%- include("footer") %>

</html>